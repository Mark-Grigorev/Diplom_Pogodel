<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Авторизация</title>
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#GetRegistrationPage').click(function (e) {
                $('#MainPartialViews').load('@Url.Action("RegistrationPage","Account")')
            });
        });
    </script>

    <link rel="stylesheet" href="~/css/css.css">
</head>
<body>
    <form name="LoginForm">
        <div class="obertka_karkas">
            <div class="forma_vkhoda">
                <div class="denotation">
                    Авторизация
                </div>
                <div class="format_vkhoda polzovatel">
                    <input type="text" class="input" name="_token"  id="Login" placeholder="Логин">
                    <i class="fas fa-user"></i>
                </div>
                <div class="format_vkhoda password">
                    <input type="password" class="input" name="_token"  id="Password" placeholder="Пароль">
                    <i class="fas fa-key"></i>
                </div>
                <div class="format_vkhoda password">
                    <h3 id="ErrorBox" style="color:red; font-style:inherit"></h3>
                    <i class="fas fa-user"></i>
                </div>
                <div class="takzhe">
                    <a href="#" type="submit" id="submitBtn" value="Login">Войти</a>
                </div>
                <div class="takzhe">
                    <a href="#" id="GetRegistrationPage">Регистрация</a>
                </div>
            </div>
        </div>
    </form>
    <div id="dropDownSelect1"></div>

    <script src="~/js/Authorization.js"></script>

</body>
</html>